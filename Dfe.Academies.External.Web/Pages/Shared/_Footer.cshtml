@{
     var returnPath = Context.Request.Path;
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

<govuk-footer>
    <govuk-footer-meta>
        <govuk-footer-meta-items>
            <govuk-footer-meta-item href="@Configuration["AccessibilityStatementsLink"]">Accessibility statement</govuk-footer-meta-item>
            <govuk-footer-meta-item href="/Cookies?returnPath=@returnPath">Cookie policy</govuk-footer-meta-item>
            <govuk-footer-meta-item href="/Terms">Terms and Conditions</govuk-footer-meta-item>
            <govuk-footer-meta-item href="/Privacy">Privacy</govuk-footer-meta-item>
        </govuk-footer-meta-items>
    </govuk-footer-meta>
</govuk-footer>