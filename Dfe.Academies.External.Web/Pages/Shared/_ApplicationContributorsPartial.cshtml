@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Dfe.Academies.External.Web.ViewModels.ConversionApplicationContributorViewModel>

<h3 class="govuk-heading-xl">Contributors</h3>
<span>You can invite other people to help you complete parts of this form</span>

<a asp-page="NewApplicationContributor" class="govuk-back-link">Invite a contributor</a>

@if (Model.Count > 0)
{
    <h3 class="govuk-heading-xl">Current Contributors</h3>
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">Name</th>
                <th scope="col" class="govuk-table__header">Role</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            @foreach(var contributor in Model)
            {
                <tr class="govuk-table__row">  
                    <th scope="row" class="govuk-table__cell">@contributor.Name</th>
                    <td class="govuk-table__cell">@contributor.Role</td>
                </tr>
            }        
        </tbody>
    </table>
}