@model List<Dfe.Academies.External.Web.ViewModels.ApplicationAuditViewModel>

@{
    
}

<h2 class="govuk-heading-m">Recent activity</h2>
<p class="govuk-body">Changes to the application by all contributors will appear here</p>

@if (Model.Count > 0)
{
    <ul class="app-task-list__items">
        @foreach (var audit in Model)
        {
            <li class="app-task-list__item">
                <strong class="">@audit.When.ToShortDateString()</strong>
                <span class="app-task-list__task-name">@audit.What</span>
            </li>
        }
    </ul>
    <a asp-page="">See the full change history</a>
}
