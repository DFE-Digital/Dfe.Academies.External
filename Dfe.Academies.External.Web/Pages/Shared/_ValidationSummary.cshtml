@model Dfe.Academies.External.Web.ViewModels.ValidationErrorMessagesViewModel

@if (Model.ValidationErrorMessages.Count > 0)
{
    <div aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var error in Model.ValidationErrorMessages)
                {
                    <li>
                        <span class="govuk-error-message">@error.Value</span>
                    </li>
                }
            </ul>
        </div>
    </div>
}