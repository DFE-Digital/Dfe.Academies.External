@{
    var errors = new Dictionary<string, string>();

    var viewErrors = ViewData["Errors"];

    if (viewErrors != null)
    {
        errors = (Dictionary<string, string>) viewErrors;
    }
}

@if (errors.Count > 0)
{
    <div aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var error in errors)
                {
                    <li>
                        <span class="govuk-error-message">@error.Value</span>
                    </li>
                }
            </ul>
        </div>
    </div>
}