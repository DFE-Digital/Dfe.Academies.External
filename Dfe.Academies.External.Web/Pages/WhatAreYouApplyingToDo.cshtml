        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="govuk-radios--conditional">
                <fieldset class="govuk-fieldset">
                    <legend>When a school becomes an academy, it must either join an existing trust or form a new one.</legend>
                    @foreach (var c in Enum.GetValues(typeof(ApplicationTypes)).OfType<ApplicationTypes>())
                    {
                        <div class="govuk-radios__item">
                            <input type="radio" asp-for="ApplicationType" value="@((int)c)" checked="@(c == Model?.ApplicationType)" class="govuk-radios__input"/>
                            <label asp-for="ApplicationType" class="govuk-label govuk-radios__label">@c.GetDescription()</label>
                        </div>
                    }
                </fieldset>
            </div>
            <div class="action">
                <input type="submit" value="Save and continue" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8"/>
            </div>
            <p id="divCancelButton">
                <a asp-page="YourApplications">Cancel and return to your applications</a>
            </p>
