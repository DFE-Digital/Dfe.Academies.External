@page
@model Dfe.Academies.External.Web.Pages.RemoveAContributorConfirmationModel
@{
	ViewData["Title"] = "Apply to become an academy - Remove a contributor";
}

@section BeforeMain
{
	<a asp-page="ApplicationOverview" asp-route-appId="@Model.ApplicationId" class="govuk-back-link">
		Back
	</a>
}

<div class="govuk-grid-column-two-thirds">
    
	<h1 class="govuk-heading-l">
		Are you sure you want to remove @Model.ContributorName from the application?
	</h1>

    <p class="govuk-body-m">@Model.ContributorName will be removed as a contributor and will no longer be able to make changes to this application.</p>

	<form method="post" name="frmAddContributor" novalidate="">
		@Html.AntiForgeryToken()
		<input type="hidden" asp-for="ApplicationId"/>
		<partial name="_HiddenFields"/>
		<input type="submit" value="Confirm" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8"/>
        <a asp-page="AddAContributor" class="govuk-button govuk-button--warning" data-module="govuk-button">Cancel</a>
	</form>
</div>