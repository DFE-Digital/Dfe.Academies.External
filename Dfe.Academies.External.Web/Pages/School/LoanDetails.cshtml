@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfe.Academies.External.Web.Pages.School.LoanDetails
@{
	ViewData["Title"] = "About the conversion";
}
@section BeforeMain
{
	<a asp-page="Loans" asp-route-appId="@Model.ApplicationId" asp-route-urn="@Model.Urn" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-column-two-thirds">
	<h1 class="govuk-heading-l">
		<span class="govuk-caption-l">Finances (Step 4 of 6)</span>
		Loan Details
	</h1>
    <form method="post" name="frmLoanDetails" novalidate="">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Urn" />
        <input type="hidden" asp-for="ApplicationId" />
        <input type="hidden" asp-for="Id"/>
        <partial name="_HiddenFields" />
        
        <div class="@(!ViewData.ModelState.IsValid ? "govuk-form-group--error" : "")">
	        <fieldset class="govuk-fieldset">
		        <legend class="govuk-fieldset__legend govuk-fieldset__legend--s"></legend>
		        <div class="@(!ViewData.ModelState.IsValid ? "govuk-visually-hidden" : "")">
			        <partial name="_ValidationSummary" model="Model.ValidationErrorMessagesViewModel"/>
		        </div>
		        <div class="govuk-form-group">
					<div id = "TotalAmountError" class="govuk-form-group">
				        <label for="TotalAmount" class="govuk-label">Total amount</label>
				        <input type="number" asp-for="TotalAmount" id="TotalAmount" class="govuk-input govuk-input--width-20"/>
			        </div>
			        <div class="govuk-form-group">
				        <label for="Purpose" class="govuk-label">Purpose of loan</label>
				        <input type="text" asp-for="Purpose" id="Purpose" class="govuk-input govuk-input--width-20"/>
			        </div>
			        <div class="govuk-form-group">
				        <label for="Provider" class="govuk-label">Loan provider</label>
				        <input type="text" asp-for="Provider" id="Provider" class="govuk-input govuk-input--width-20"/>
			        </div>
			        <div id = "InterestRateAmountError" class="govuk-form-group">
				        <label for="InterestRate" class="govuk-label">Interest rate</label>
				        <input type="number" asp-for="InterestRate" id="InterestRate" class="govuk-input govuk-input--width-20"/>
			        </div>
			        <div class="govuk-form-group">
				        <label for="RepaymentSchedule" class="govuk-label">Schedule of Repayment</label>
				        <textarea asp-for="RepaymentSchedule" id="RepaymentSchedule" class="govuk-textarea" cols="40" rows="5" maxlength="2000"></textarea>
			        </div>
		        </div>
	        </fieldset>
		</div>
		<br />
        
		<input type="submit" value="Save and continue" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8"/>
	</form>
</div>
