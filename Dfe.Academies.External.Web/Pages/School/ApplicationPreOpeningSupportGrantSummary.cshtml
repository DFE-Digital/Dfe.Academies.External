@page
@using Dfe.Academies.External.Web.Enums
@using Dfe.Academies.External.Web.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfe.Academies.External.Web.Pages.School.ApplicationPreOpeningSupportGrantSummaryModel
@{
	ViewData["Title"] = "Apply to become an academy - About the conversion";
}

@section BeforeMain
{
	<partial name="Shared/_BackLink" model='new BackViewModel { ApplicationId = Model.ApplicationId, SchoolURN = Model.Urn, ApplicationType = Model.ApplicationType }'/>
}

<div class="govuk-grid-column-two-thirds">
	<span class="govuk-caption-l">
		@Model.SchoolName
	</span>
	<h1 class="govuk-heading-l">
		Pre-opening support grant
	</h1>
    @if (Model.ApplicationType == ApplicationTypes.JoinAMat)
    {
        <div class="govuk-warning-text">
            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
            <strong class="govuk-warning-text__text">
                <span class="govuk-visually-hidden">Warning</span>
                Your school is not yet eligible for a pre-opening support grant.
            </strong>
        </div>
        <div id="changedName-hint" class="govuk-hint">
            A school must join a trust with at least 2 other converting schools or transfering acadamies to be eligible for the pre-opening support grant. 
        </div>
        <details class="govuk-details">
            <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">
                Grant eligibility
            </span>
        </summary>
        <div class="govuk-details__text">
            <p>
                Schools that apply to become an academy can get a grant up to £25,000 to help with the cost of converting, if they join the trust in a group of at least 2 other schools or academies.
                </p><p>You can <a class="govuk-link" rel="noreferrer noopener" target="_blank" href="https://www.gov.uk/government/publications/academy-support-grant">read details about support grant eligibility (opens in a new tab)</a> on GOV.UK.</p>
           </div>
    </details>
    }
	@foreach (var question in Model.ViewModel)
	{
        if (question.Title == ApplicationPreOpeningSupportGrantHeadingViewModel.GroupsHeading)
        {
            <h1 class="govuk-heading-m">
                @question.Title
            </h1>

        }
        <div class="govuk-grid-row">
			<div class="govuk-grid-column-full">
				@if (question.Status == SchoolConversionComponentStatus.NotStarted)
				{
					<a asp-page="@question.URI" class="govuk-button govuk-button--secondary"
					   asp-route-appId="@Model.ApplicationId"
					   asp-route-urn="@Model.Urn"
             data-cy="startSectionButton">
						Start section
					</a>
				}
				else if(Model.ApplicationStatus != ApplicationStatus.Submitted)
				{
					<a asp-page="@question.URI" class="govuk-link"
					   asp-route-appId="@Model.ApplicationId"
					   asp-route-urn="@Model.Urn">
						Change your answers
					</a>
				}
			</div>
		</div>
		<hr/>
		@foreach (var conversionComponent in question.Sections)
		{
			<partial name="_SchoolConversionComponentPartial" model="@conversionComponent"/>
		}
	}

    <partial name="Shared/_BackButton" model='new BackViewModel { ApplicationId = Model.ApplicationId, SchoolURN = Model.Urn, ApplicationType = Model.ApplicationType }'/>
</div>
<input type="hidden" asp-for="Urn" />
